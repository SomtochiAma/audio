{
    "manifest_version": 2,
    "name": "Audio Web",
    "version": "1.0.0",
    "description": "A chrome extension to convert a webpage to audio",
    "short_name": "AudioWeb",
    "permissions": ["activeTab", "declarativeContent"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["css/style.css"],
            "js": ["js/background.js"]
        }
    ],
    "browser_action": {
        "default_title": "Does a thing when you do a thing",
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png"
        }
    }
}
